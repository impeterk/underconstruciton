import Navigation from './Navigation.astro';
const { navActiveId } = Astro.props;
import { ThemeList } from '../Solid/ThemeList';
import { Image } from 'astro:assets';
import avatar from '../../assets/cartoon-avatar.png';
---

<nav class="drawer-side z-40" id="sidebar">
	<label for="my-drawer" class="drawer-overlay"></label>

	<aside class="bg-base-200 h-full w-60 xl:w-80 flex flex-col">
		<div class="ml-8 py-4 hidden lg:block xl:hidden">
			<ThemeList client:only="solid-js" />
		</div>
		<figure class="mx-auto pt-10">
			<Image
				src={avatar}
				width={200}
				height={240}
				class="aspect-square rounded-full ring ring-accent/50 shadow-lg shadow-accent"
				alt="avatar"
				format="avif"
				decoding="async"
			/>
			<figcaption class="italic text-sm text-center mt-2"></figcaption>
		</figure>
		<Navigation navActiveId={navActiveId} />
		<div class="mt-auto mb-4 flex justify-around text-base-content">
			<a href="#" target="_blank"
				><i class="nf nf-fa-github_square text-4xl hover:text-primary-focus transition"></i></a
			>
			<a href="#" target="_blank"
				><i class="nf nf-fa-linkedin_square text-4xl hover:text-primary-focus transition"></i></a
			>
		</div>
	</aside>
</nav>
