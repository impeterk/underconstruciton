<form>
	<div class="mb-4">
		<label for="email" class="block text-md font-medium text-orange-700">Email</label>
		<input
			type="email"
			id="email"
			name="email"
			class="mt-1 px-3 py-2 w-full bg-slate-400 text-slate-900 rounded-lg focus:ring focus:outline-none focus:ring-orange-500"
		/>
	</div>
	<div class="mb-4">
		<label for="message" class="block text-md font-medium text-orange-700">Message</label>
		<textarea
			id="message"
			name="message"
			rows="10"
			class="mt-1 px-3 py-2 w-full bg-slate-400 text-slate-900 rounded-lg focus:ring focus:outline-none focus:ring-orange-500"
		></textarea>
	</div>
	<button
		type="submit"
		class="w-full bg-orange-500 text-white py-2 font-semibold text-2xl rounded-lg hover:bg-orange-600 transition duration-300"
		>Send</button
	>
</form>
