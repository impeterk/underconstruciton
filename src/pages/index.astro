---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1 class="text-gradient text-center uppercase ">Under</br>construction</h1>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://github.com/impeterk"
				title="GitHub"
				imgsrc="../../public/github-svg.svg"
			/>
			<Card
				href="https://linkedin.com/in/impeterk"
				title="LinkedIn"
				imgsrc="../../public/linkedin-svg.svg"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	h1 {
		font-size: 8rem;
		font-weight: 800;
		margin: 4rem;
		@media only screen and (max-width: 1100px){
		font-size: 4rem;	
		}
	}
	.uppercase {
		text-transform: uppercase;
	}
	.text-center {
		text-align: center;
	}
	.text-gradient {
		background-image: linear-gradient(90deg, hsl(199, 82%, 52%), hsl(var(--accent)) );
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		/* -webkit-text-stroke: 2px hsla(0,0%,0%, 75%); */
	}
	.link-card-grid {
		width: 100%;
		display: grid;
		grid-auto-flow: column;
		grid-template-columns: repeat(2, 200px);
		justify-content: space-evenly;
		gap: 1rem;
		padding: 0;
	}
</style>
